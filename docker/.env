# Project Configuration
COMPOSE_PROJECT_NAME=cook-lion

KEYCLOAK_VERSION=23.0
KC_HOSTNAME=localhost
KC_HOSTNAME_PORT=8080
KEYCLOAK_POSTGRES_DB=keycloak
KEYCLOAK_POSTGRES_USER=keycloak
KEYCLOAK_POSTGRES_PASSWORD=keycloak

POSTGRES_VERSION=16-alpine
POSTGRES_PORT=5432
POSTGRES_DB=cooklion
POSTGRES_USER=cooklion
POSTGRES_PASSWORD=cooklion

# Server Configuration
SERVER_PORT=9090
SPRING_PROFILES_ACTIVE=dev

# PostgreSQL Configuration
POSTGRES_PORT=5432
POSTGRES_URL=jdbc:postgresql://localhost:5432/cooklion

# Database Connection Pool
DB_POOL_SIZE=20
DDL_AUTO=create-drop

# JWT Configuration
JWT_SECRET=my-super-secret-jwt-key-for-development-only-change-in-production
JWT_EXPIRATION_MINUTES=60

# Admin Configuration
ADMIN_EMAILS=admin@cooklion.com,dev@cooklion.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:9090,http://localhost:8080

# Keycloak OAuth2 Configuration
KEYCLOAK_CLIENT_ID=cooklion
KEYCLOAK_CLIENT_SECRET=your-dev-client-secret
KEYCLOAK_REDIRECT_URI=http://localhost:9090/login/oauth2/code/keycloak
KEYCLOAK_ISSUER_URI=http://localhost:8080/realms/cooklion

# Ollama AI Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b

# Logging Configuration
LOG_LEVEL=DEBUG